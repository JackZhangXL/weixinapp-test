@font-face {
  font-family: 'iconfont';  /* project id 2426077 */
  src: url('//at.alicdn.com/t/font_2426077_6gw8zpdxqwl.eot');
  src: url('//at.alicdn.com/t/font_2426077_6gw8zpdxqwl.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_2426077_6gw8zpdxqwl.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_2426077_6gw8zpdxqwl.woff') format('woff'),
  url('//at.alicdn.com/t/font_2426077_6gw8zpdxqwl.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_2426077_6gw8zpdxqwl.svg#iconfont') format('svg');
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 32px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-zujian:before {
  content: "\e652";
  color: #1296db;
  font-size: 32px;
}
.icon-back::after{
  content: '\e60d';
  font-size: 22px;
}
.icon-home::after{
  content: '\e9db';
  font-size: 22px;
}
.navigator-item {
  padding: 5px 10px;
  border-bottom: 1px solid #DEDEDE;
}
.section-title {
  background-color: #b2b2b2;
  padding: 5px 10px;
}
.rich_text_wrap {
  margin: 10px;
}
rich-text {
  user-select:text;
  -webkit-user-select:text
}
.bc-red {
  background: red;
  width: 100px;
  height: 120px;
}
.bc-green {
  background: green;
  width: 100px;
  height: 140px;
}

movable-area {
  background-color: #ccc;
  overflow: hidden;
}
movable-view {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1AAD19;
  color: #fff;
}
.list_item {
  display: flex;
  border-bottom: 1px solid #DEDEDE;
}
.left {
  background-color: white;
  height: 100rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  color: grey;
  line-height: 100rpx;
  padding-left: 30rpx;
}
.right {
  height: 100;
  display: flex;
  direction: row;
  text-align: center;
  vertical-align: middle;
  line-height: 110rpx;
}
.read {
  background-color: #ccc;
  color: #fff;
  width: 150rpx;
}
.delete {
  background-color: red;
  color: #fff;
  width: 150rpx; 
}
.slideViewClass .weui-cell{
  padding: 0;
}
.scroll-view-item {
  height: 300rpx;
}
.demo-text-1 {
  background-color: green;
}
.demo-text-2 {
  background-color: blue;
}
.demo-text-3 {
  background-color: gray;
}
.item,
.item>view {
  display: flex;
  align-items: center;
  height: 100rpx;
  width: 630rpx;
  padding-left: 20rpx;
}
.item+.item { /* +加号选择器，选择紧接在.item元素后的元素，代表除第一个之外，后面的.item，用于实现间隔样式 */
  border-top: 1px solid #ccc;
}
